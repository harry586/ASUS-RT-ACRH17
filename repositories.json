{
  // 源码库配置 - 定义支持的OpenWrt分支和它们的属性
  "repositories": {
    
    "immortalwrt": {
      // 源码仓库URL
      "url": "https://github.com/immortalwrt/immortalwrt",
      // 描述信息
      "description": "ImmortalWrt 开源路由器系统 - 功能丰富的分支",
      // 稳定分支列表
      "stable_branches": ["openwrt-21.02", "openwrt-23.05", "master"],
      // 自动模式推荐的分支
      "recommended_branch": "openwrt-21.02",
      // 功能特性支持
      "features": {
        "custom_plugins_support": true,  // 支持自定义插件
        "patch_friendly": true,          // 易于打补丁
        "luci_themes": true              // 支持Luci主题
      },
      // 使用说明和推荐场景
      "notes": "推荐用于需要丰富功能和国内优化的场景"
    },
    
    "openwrt": {
      "url": "https://github.com/openwrt/openwrt", 
      "description": "OpenWrt 官方主线 - 稳定纯净",
      "stable_branches": ["main", "v23.05.x", "v22.03.x"],
      "recommended_branch": "main",
      "features": {
        "custom_plugins_support": true,
        "patch_friendly": true,
        "luci_themes": false
      },
      "notes": "推荐用于追求稳定性和官方支持的环境"
    },
    
    "lede": {
      "url": "https://github.com/coolsnowwolf/lede",
      "description": "Lean's LEDE 源码 - 集成丰富功能",
      "stable_branches": ["master"],
      "recommended_branch": "master", 
      "features": {
        "custom_plugins_support": true,
        "patch_friendly": true,
        "luci_themes": true
      },
      "notes": "推荐用于需要最新功能和丰富插件的场景"
    }
    
  },
  
  // 默认配置 - 工作流的默认选项
  "defaults": {
    "repository": "immortalwrt",        // 默认源码库
    "branch": "auto",                   // 默认分支选择模式
    "config_path": "configs/.config_default"  // 默认配置文件路径
  },
  
  // 自定义功能支持信息
  "custom_features_support": {
    "supported_repositories": ["immortalwrt", "openwrt", "lede"],  // 支持自定义功能的源码库
    "recommended_for_custom": "immortalwrt",  // 自定义功能支持最好的源码库
    "notes": "自定义功能在 ImmortalWrt 和 LEDE 中支持最好"  // 说明信息
  }
}
